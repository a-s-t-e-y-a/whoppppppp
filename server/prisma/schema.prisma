// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")

}

model User {
    id       String    @id @default(auto()) @map("_id") @db.ObjectId
    username String @unique
    bio String?
    email String @unique
    password String 
    avatar String?
    phone String @unique
    country String
    sys_infos  Sys_info?
  }
model Sys_info{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    ip_address Json
    operating_system String[] 
    longitude String?
    latitude String?
    totalmem Int[]
    cpu Json[]
    freemem Int[]
    hostname String[]
    os_version String[]
    uptime Int[]
    user   User   @relation(fields: [userId], references: [id])
    userId String @unique @db.ObjectId 
  }
model Post{
    id String @id @default(auto()) @map("_id") @db.ObjectId
    user_name String
    user_id String
    like Int?
    image String?
    text String?
    tags String[]
  }
model Comments{
      id String @id @default(auto()) @map("_id") @db.ObjectId
      user_name String
      user_id String
      text_comment String
      time DateTime
  }
